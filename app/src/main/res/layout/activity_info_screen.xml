<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info_screen"
    android:background="@drawable/home">

    <ImageView
        android:layout_width="220dp"
        android:id="@+id/fotoInfo"
        android:src="@drawable/profile"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_height="220dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fotoInfo"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/pink_prim"
        android:text="Ey-Yooo! I'm talitha, Undergraduate student majoring in Informatics at Institut Teknologi Nasional Bandung since 2021. Interested in honing more skills in data science, ui/ux design also building multiplatform applications."/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="@color/pink_prim"
        android:textColor="@color/secondary"
        android:text="Next" />

</RelativeLayout>